<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType = "centerCrop"
        android:src="@drawable/bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_quote"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_margin="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_quote_author"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/detail_quote"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/detail_quote_source"
        android:layout_alignEnd="@+id/detail_quote_source"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_quote_source"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detail_quote_author"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="italic" />


</RelativeLayout>
