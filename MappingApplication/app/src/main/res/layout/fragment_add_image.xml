<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/image_title"
        android:id="@+id/image_location_title_text">
    </EditText>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location_hint"
        android:id="@+id/image_location_name_text"
        android:layout_below="@id/image_location_title_text">
    </EditText>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/camera_button"
        android:text="@string/add_image_hint"
        android:layout_below="@id/image_location_name_text"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/image_view"
        android:layout_below="@id/camera_button"
        android:contentDescription="@string/add_image_description" />

</RelativeLayout>